<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    tools:context=".LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กรุณาเลือกวิธีการเข้าสู่ระบบ"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/qr_login_icon_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_method_background_qr"
                />

            <Button
                android:id="@+id/serial_login_icon_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/login_method_background_serial" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/qr_login_btn"
                style="@style/MyButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="70dp"
                android:background="@drawable/button_background"
                android:capitalize="none"
                android:text="QR Code"/>

            <Button
                android:id="@+id/serial_login_btn"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/MyButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/button_background"
                android:text="Serial login"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="0dp"
                android:background="@color/bottombar_background"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="แอปพลิเคชันลงคะแนนเสียงในการประชุม"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>